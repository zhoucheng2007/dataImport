<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--***********************dao configuration*********************************************** -->
	<bean id="mainblobDao" class="org.loushang.demo.example.dao.jdbc.MainblobJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<!--***********************domain configuration******************************************** -->

	<bean id="mainblobDomain"
		class="org.loushang.demo.example.domain.support.MainblobDomainImpl">
		<property name="mainblobDao">
			<ref bean="mainblobDao" />
		</property>
	</bean>
	<!--***********************service configuration******************************************* -->

	<bean id="mainblobService"
		class="org.loushang.demo.example.service.support.MainblobServiceImpl">
		<property name="mainblobDomain">
			<ref bean="mainblobDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>


	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="mainblobquery_page_init"
		class="org.loushang.demo.example.query.MainblobQueryPageInitCmd">
		<property name="mainblobService">
			<ref bean="mainblobService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="mainblobqueryforward" />
				</entry>
			</map>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->

	<!--***********************query page forward configuration begin****************************************** -->
	<bean id="mainblobqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/example/mainblob_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end****************************************** -->

	<!--***********************View objects view configuration**************************************** -->
	<bean id="mainblobView" class="org.loushang.demo.example.view.MainblobView"
		singleton="false" />

	<!--***********************cmd configuration begin********************************************* -->
	<bean id="mainblob" class="org.loushang.demo.example.cmd.MainblobCmd"
		singleton="false">
		<property name="mainblobService">
			<ref bean="mainblobService" />
		</property>
		<property name="view">
			<ref bean="mainblobView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="mainblobView">
					<ref bean="mainblobforward" />
				</entry>
				<entry key="mainblobViewChain">
					<ref bean="mainblobforwardchain" />
				</entry>
			</map>
		</property>
	</bean>

	<!--***********************cmd configuration end********************************************* -->

	<!--***********************page forward configuration begin*********************************** -->
	<bean id="mainblobforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/example/mainblob_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/example/mainblob_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/example/mainblob_forupdate.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="mainblobforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="mainblobquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end*********************************** -->
</beans>
