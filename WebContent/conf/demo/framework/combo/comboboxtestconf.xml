<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--***********************dao configuration*********************************************** -->
	<bean id="comboboxTestDao"
		class="org.loushang.demo.combo.combobox.dao.jdbc.ComboboxTestJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<!--***********************domain configuration******************************************** -->

	<bean id="comboboxTestDomain"
		class="org.loushang.demo.combo.combobox.domain.support.ComboboxTestDomainImpl">
		<property name="comboboxTestDao">
			<ref bean="comboboxTestDao" />
		</property>
	</bean>
	<!--***********************service configuration******************************************* -->

	<bean id="comboboxTestService"
		class="org.loushang.demo.combo.combobox.service.support.ComboboxTestServiceImpl">
		<property name="comboboxTestDomain">
			<ref bean="comboboxTestDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>


	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="comboboxtestquery_page_init"
		class="org.loushang.demo.combo.combobox.query.ComboboxTestQueryPageInitCmd">
		<property name="comboboxTestService">
			<ref bean="comboboxTestService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="comboboxtestqueryforward" />
				</entry>
			</map>
		</property>
		<property name="beforIntercept">
			<list>
				<ref bean="combobox_test_interceptor" />
			</list>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->
	<!--***********************query page forward configuration begin*********************************** -->
	<bean id="comboboxtestqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/combo/combobox/combobox_test_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end*********************************** -->

	<!--***********************View objects view configuration**************************************** -->
	<bean id="comboboxTestView" class="org.loushang.demo.combo.combobox.view.ComboboxTestView"
		singleton="false" />

	<!--***********************cmd configuration begin********************************************* -->
	<bean id="comboboxtest" class="org.loushang.demo.combo.combobox.cmd.ComboboxTestCmd"
		singleton="false">
		<property name="comboboxTestService">
			<ref bean="comboboxTestService" />
		</property>
		<property name="comboCollectionService">
			<ref bean="comboCollectionService" />
		</property>
		<property name="view">
			<ref bean="comboboxTestView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="comboboxtestView">
					<ref bean="comboboxtestforward" />
				</entry>
				<entry key="comboboxtestViewChain">
					<ref bean="comboboxtestforwardchain" />
				</entry>
			</map>
		</property>
		<!--Whether to intercept? -->
		<property name="beforIntercept">
			<list>
				<ref bean="combobox_test_interceptor" />
			</list>
		</property>
	</bean>

	<bean id="combobox_test_interceptor" class="org.loushang.waf.interceptor.CollectionInterceptor">
		<property name="collections">
			<map>
				<entry key="COMBOBOXTEST_COMBOBOXSEX_COLLECTION">
					<ref bean="COMBOBOXTEST_COMBOBOXSEX_COLLECTION" />
				</entry>
				<entry key="COMBOBOXTEST_COMBOBOXADDRESS_COLLECTION">
					<ref bean="COMBOBOXTEST_COMBOBOXADDRESS_COLLECTION" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************cmd configuration end********************************************* -->

	<!--***********************page forward configuration begin*********************************** -->
	<bean id="comboboxtestforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/combo/combobox/combobox_test_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/combo/combobox/combobox_test_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/combo/combobox/combobox_test_forupdate.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="comboboxtestforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="comboboxtestquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end*********************************** -->

	<bean id="COMBOBOXTEST_COMBOBOXSEX_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>COMBOBOXTEST.COMBOBOXSEX</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>

	<bean id="COMBOBOXTEST_COMBOBOXADDRESS_COLLECTION" class="org.loushang.waf.data.SqlCollection">
		<property name="sql">
			<value>SELECT COMBO_ID,COMBO_NAME FROM COMBO_COLLECTION</value>
		</property>
		<property name="ds">
			<ref bean="dataSource" />
		</property>
	</bean>


</beans>
