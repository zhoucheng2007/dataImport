<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--***********************dao configuration*********************************************** -->
	<bean id="mainGridDao" class="org.loushang.demo.grid.dao.jdbc.MainGridJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>
	<!--***********************domain configuration******************************************** -->

	<bean id="mainGridDomain"
		class="org.loushang.demo.grid.domain.support.MainGridDomainImpl">
		<property name="mainGridDao">
			<ref bean="mainGridDao" />
		</property>
	</bean>
	<!--***********************service configuration******************************************* -->

	<bean id="mainGridService"
		class="org.loushang.demo.grid.service.support.MainGridServiceImpl">
		<property name="mainGridDomain">
			<ref bean="mainGridDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>


	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="maingridquery_page_init" class="org.loushang.demo.grid.query.MainGridQueryPageInitCmd">
		<property name="mainGridService">
			<ref bean="mainGridService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="maingridqueryforward" />
				</entry>
			</map>
		</property>
		<property name="beforIntercept">
			<list>
				<ref bean="main_grid_interceptor" />
			</list>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->

	<!--***********************query page forward configuration begin****************************************** -->
	<bean id="maingridqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/grid/main_grid_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end****************************************** -->

	<!--***********************View objects view configuration**************************************** -->
	<bean id="mainGridView" class="org.loushang.demo.grid.view.MainGridView"
		singleton="false" />

	<!--***********************cmd configuration begin********************************************* -->
	<bean id="maingrid" class="org.loushang.demo.grid.cmd.MainGridCmd"
		singleton="false">
		<property name="mainGridService">
			<ref bean="mainGridService" />
		</property>
		<property name="productService">
			<ref bean="productService" />
		</property>
		<property name="view">
			<ref bean="mainGridView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="maingridView">
					<ref bean="maingridforward" />
				</entry>
				<entry key="maingridViewChain">
					<ref bean="maingridforwardchain" />
				</entry>
			</map>
		</property>
		<!--Whether to intercept? -->
		<property name="beforIntercept">
			<list>
				<ref bean="main_grid_interceptor" />
				<ref bean="grid_item_interceptor" />
			</list>
		</property>
	</bean>

	<bean id="main_grid_interceptor" class="org.loushang.waf.interceptor.CollectionInterceptor">
		<property name="collections">
			<map>
				<entry key="MAINGRID_OPERATORSTATUS_COLLECTION">
					<ref bean="MAINGRID_OPERATORSTATUS_COLLECTION" />
				</entry>
				<entry key="MAINGRID_OPERATORDEPOT_COLLECTION">
					<ref bean="MAINGRID_OPERATORDEPOT_COLLECTION" />
				</entry>
			</map>
		</property>
	</bean>
	<bean id="grid_item_interceptor" class="org.loushang.waf.interceptor.CollectionInterceptor">
		<property name="collections">
			<map>
				<entry key="GRIDITEM_ITEMLEVEL_COLLECTION">
					<ref bean="GRIDITEM_ITEMLEVEL_COLLECTION" />
				</entry>
				<entry key="GRIDITEM_ITEMDISCOUNT_COLLECTION">
					<ref bean="GRIDITEM_ITEMDISCOUNT_COLLECTION" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************cmd configuration end********************************************* -->

	<!--***********************page forward configuration begin*********************************** -->
	<bean id="maingridforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/grid/main_grid_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/grid/main_grid_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/grid/main_grid_forupdate.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="maingridforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="maingridquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end*********************************** -->

	<bean id="MAINGRID_OPERATORSTATUS_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>MAINGRID.OPERATORSTATUS</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
	<bean id="MAINGRID_OPERATORDEPOT_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>MAINGRID.OPERATORDEPOT</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>

	<bean id="GRIDITEM_ITEMLEVEL_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>GRIDITEM.ITEMLEVEL</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
	<bean id="GRIDITEM_ITEMDISCOUNT_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>GRIDITEM.ITEMDISCOUNT</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
</beans>
