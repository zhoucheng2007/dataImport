<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--***********************dao configuration*********************************************** -->
	<bean id="organStruDao" class="org.loushang.demo.tree.dao.jdbc.OrganStruJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<!--***********************domain configuration******************************************** -->

	<bean id="organStruDomain"
		class="org.loushang.demo.tree.domain.support.OrganStruDomainImpl">
		<property name="organStruDao">
			<ref bean="organStruDao" />
		</property>
	</bean>
	<!--***********************service configuration******************************************* -->

	<bean id="organStruService"
		class="org.loushang.demo.tree.service.support.OrganStruServiceImpl">
		<property name="organStruDomain">
			<ref bean="organStruDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>


	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="organstruquery_page_init" class="org.loushang.demo.tree.query.OrganStruQueryPageInitCmd">
		<property name="organStruService">
			<ref bean="organStruService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="organstruqueryforward" />
				</entry>
			</map>
		</property>
		<property name="beforIntercept">
			<list>
				<ref bean="organ_stru_interceptor" />
			</list>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->
	<!--***********************query page forward configuration begin*********************************** -->
	<bean id="organstruqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/tree/organ_stru_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end*********************************** -->

	<!--***********************View objects view configuration**************************************** -->
	<bean id="organStruView" class="org.loushang.demo.tree.view.OrganStruView"
		singleton="false" />

	<!--***********************cmd configuration begin********************************************* -->
	<bean id="organstru" class="org.loushang.demo.tree.cmd.OrganStruCmd"
		singleton="false">
		<property name="organStruService">
			<ref bean="organStruService" />
		</property>
		<property name="view">
			<ref bean="organStruView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="organstruView">
					<ref bean="organstruforward" />
				</entry>
				<entry key="organstruViewChain">
					<ref bean="organstruforwardchain" />
				</entry>
			</map>
		</property>
		<!--Whether to intercept? -->
		<property name="beforIntercept">
			<list>
				<ref bean="organ_stru_interceptor" />
			</list>
		</property>
	</bean>

	<bean id="organ_stru_interceptor" class="org.loushang.waf.interceptor.CollectionInterceptor">
		<property name="collections">
			<map>
				<entry key="ORGANSTRU_ORGANTYPE_COLLECTION">
					<ref bean="ORGANSTRU_ORGANTYPE_COLLECTION" />
				</entry>
				<entry key="ORGANSTRU_ISLEAF_COLLECTION">
					<ref bean="ORGANSTRU_ISLEAF_COLLECTION" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************cmd configuration end********************************************* -->

	<!--***********************page forward configuration begin*********************************** -->
	<bean id="organstruforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/tree/organ_stru_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/tree/organ_stru_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/tree/organ_stru_forupdate.jsp</prop>
				<prop key="getChildren">jsp/demo/framework/tree/tree_node.jsp</prop>
				<prop key="getRoot">jsp/demo/framework/tree/tree_root.jsp</prop>
				<prop key="getHelp">jsp/demo/framework/tree/tree_help.jsp</prop>
				<prop key="getHelpCh">jsp/demo/framework/tree/gethelpchildren.jsp</prop>
				<prop key="changeOrderRoot">jsp/demo/framework/tree/changeOrder.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="organstruforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="organstruquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end*********************************** -->

	<bean id="ORGANSTRU_ORGANTYPE_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>ORGANSTRU.ORGANTYPE</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
	<bean id="ORGANSTRU_ISLEAF_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>ORGANSTRU.ISLEAF</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>

</beans>
