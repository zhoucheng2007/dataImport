<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--***********************dao configuration*********************************************** -->
	<bean id="flexgridDao" class="org.loushang.demo.flexgrid.dao.jdbc.FlexgridJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<!--***********************domain configuration******************************************** -->

	<bean id="flexgridDomain"
		class="org.loushang.demo.flexgrid.domain.support.FlexgridDomainImpl">
		<property name="flexgridDao">
			<ref bean="flexgridDao" />
		</property>
	</bean>
	<!--***********************service configuration******************************************* -->

	<bean id="flexgridService"
		class="org.loushang.demo.flexgrid.service.support.FlexgridServiceImpl">
		<property name="flexgridDomain">
			<ref bean="flexgridDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>


	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="flexgridquery_page_init"
		class="org.loushang.demo.flexgrid.query.FlexgridQueryPageInitCmd">
		<property name="flexgridService">
			<ref bean="flexgridService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="flexgridqueryforward" />
				</entry>
			</map>
		</property>
		<property name="beforIntercept">
			<list>
				<ref bean="flexgrid_interceptor" />
			</list>
		</property>
		<property name="pageSize">
			<value>100</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->
	<!--***********************query page forward configuration begin*********************************** -->
	<bean id="flexgridqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/flexgrid/flexgrid_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end*********************************** -->

	<!--***********************View objects view configuration**************************************** -->
	<bean id="flexgridView" class="org.loushang.demo.flexgrid.view.FlexgridView"
		singleton="false" />

	<!--***********************cmd configuration begin********************************************* -->
	<bean id="flexgrid" class="org.loushang.demo.flexgrid.cmd.FlexgridCmd"
		singleton="false">
		<property name="flexgridService">
			<ref bean="flexgridService" />
		</property>
		<property name="view">
			<ref bean="flexgridView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="flexgridView">
					<ref bean="flexgridforward" />
				</entry>
				<entry key="flexgridViewChain">
					<ref bean="flexgridforwardchain" />
				</entry>

			</map>
		</property>
		<!--Whether to intercept? -->
		<property name="beforIntercept">
			<list>
				<ref bean="flexgrid_interceptor" />
			</list>
		</property>
	</bean>

	<bean id="flexgrid_interceptor" class="org.loushang.waf.interceptor.CollectionInterceptor">
		<property name="collections">
			<map>
				<entry key="FLEXGRID_FLEXENUM_COLLECTION">
					<ref bean="FLEXGRID_FLEXENUM_COLLECTION" />
				</entry>
				<entry key="FLEXGRID_FLEXLISTENUM_COLLECTION">
					<ref bean="FLEXGRID_FLEXLISTENUM_COLLECTION" />
				</entry>
				<entry key="messageCollection">
					<ref bean="messageCollection" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************cmd configuration end********************************************* -->

	<!--***********************page forward configuration begin*********************************** -->
	<bean id="flexgridforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/flexgrid/flexgrid_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/flexgrid/flexgrid_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/flexgrid/flexgrid_forupdate.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="flexgridforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="flexgridquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end*********************************** -->

	<bean id="FLEXGRID_FLEXENUM_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>FLEXGRID.FLEXENUM</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
	<bean id="FLEXGRID_FLEXLISTENUM_COLLECTION" class="org.loushang.waf.data.EnumCollection">
		<property name="enumName">
			<value>FLEXGRID.FLEXLISTENUM</value>
		</property>
		<property name="enumService">
			<ref bean="enumService" />
		</property>
	</bean>
	<bean id="messageCollection" class="org.loushang.waf.data.SqlCollection">
		<property name="sql">
			<value>SELECT EMPLOYEE_CODE,EMPLOYEE_NAME FROM LS_EMPLOYEE</value>
		</property>
		<property name="ds">
			<ref bean="dataSource" />
		</property>
	</bean>

</beans>
