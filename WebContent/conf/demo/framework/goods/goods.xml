<?xml version="1.0" encoding="gb2312"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!--******************************dao configuration**************************************** -->
	<bean id="goodsDao" class="org.loushang.demo.goods.dao.support.GoodsJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>


	<bean id="factoryDao" class="org.loushang.demo.goods.dao.support.FactoryJdbcDao">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

	<!--***********************domain configuration******************************************* -->

	<bean id="goodsDomain"
		class="org.loushang.demo.goods.domain.support.GoodsDomainSupport">
		<property name="goodsDao">
			<ref bean="goodsDao" />
		</property>

		<property name="factoryDao">
			<ref bean="factoryDao" />
		</property>

	</bean>
	<!--**************************Service configuration**************************************** -->

	<bean id="goodsService"
		class="org.loushang.demo.goods.service.support.GoodsServiceSupport">
		<property name="goodsDomain">
			<ref bean="goodsDomain" />
		</property>
		<property name="transactionTemplate">
			<ref bean="jdbcTransactionTemplate" />
		</property>
	</bean>

	<!--***********************Flip initialization special query configuration 
		begin****************************************** -->
	<bean id="goodsquery_page_init" class="org.loushang.demo.goods.cmd.GoodsQueryPageInitCmd">
		<property name="goodsService">
			<ref bean="goodsService" />
		</property>
		<property name="forwards">
			<map>
				<entry key="speQuery">
					<ref bean="goodsqueryforward" />
				</entry>
			</map>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
	</bean>
	<!--***********************Flip initialization special query configuration 
		end****************************************** -->

	<!--***********************query page forward configuration begin*********************************** -->
	<bean id="goodsqueryforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="queryPageInit">jsp/demo/framework/goods/goods_query_init.jsp</prop>
			</props>
		</property>
	</bean>
	<!--***********************query page forward configuration end*********************************** -->

	<!--***********************View objects view configuration***************************************** -->
	<bean id="goodsView" class="org.loushang.demo.goods.view.GoodsView"
		singleton="false" />

	<!--***********************cmd configuration begin******************************************** -->
	<bean id="goods" class="org.loushang.demo.goods.cmd.GoodsCmd"
		singleton="false">
		<property name="goodsService">
			<ref bean="goodsService" />
		</property>
		<property name="factoryDao">
			<ref bean="factoryDao" />
		</property>
		<property name="view">
			<ref bean="goodsView" />
		</property>
		<property name="forwards">
			<map>
				<entry key="goodsView">
					<ref bean="goodsforward" />
				</entry>
				<entry key="goodsViewChain">
					<ref bean="goodsforwardchain" />
				</entry>
			</map>
		</property>
		<property name="pageSize">
			<value>10</value>
		</property>
		<property name="foreignKeyName">
			<value>GOODS_ID_SEARCH</value>
		</property>
	</bean>
	<!--***********************cmd configuration end******************************************** -->

	<!--***********************page forward configuration begin********************************** -->
	<bean id="goodsforward" class="org.loushang.waf.mvc.ServletDispatcherForward">
		<property name="mappings">
			<props>
				<prop key="detail">jsp/demo/framework/goods/goods_detail.jsp</prop>
				<prop key="forinsert">jsp/demo/framework/goods/goods_forinsert.jsp</prop>
				<prop key="forupdate">jsp/demo/framework/goods/goods_forupdate.jsp</prop>
			</props>
		</property>
	</bean>
	<bean id="goodsforwardchain" class="org.loushang.waf.mvc.ChainForward">
		<property name="mappings">
			<map>
				<entry key="success">
					<ref bean="goodsquery_page_init" />
				</entry>
			</map>
		</property>
	</bean>
	<!--***********************page forward configuration end********************************** -->
</beans>