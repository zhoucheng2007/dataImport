<?xml version="1.0" encoding="gb2312"?><!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd"><beans>	<bean id="jdbcTransactionManager"		class="org.loushang.commons.jdbc.datasource.DataSourceTransactionManager">		<property name="dataSource">			<ref bean="dataSource" />		</property>	</bean>	<bean id="jdbcTransactionTemplate"		class="org.springframework.transaction.support.TransactionTemplate">		<property name="isolationLevel">			<value>2</value>		</property>		<property name="readOnly">			<value>false</value>		</property>		<property name="transactionManager">			<ref bean="jdbcTransactionManager" />		</property>	</bean>	<!-- cell±¨±í -->	<bean id="pageTemplateService"		class="org.loushang.waf.ext.service.template.PageTemplateServiceSupport">		<property name="template">			<value>jsp/template.jsp</value>		</property>		<property name="jspPath">			<value>jsp</value>		</property>		<property name="configFiles">			<list>				<value>/WEB-INF/template/screens.xml</value>			</list>		</property>	</bean>	<!--Cache -->	<bean id="globalCacheConfiguration" class="org.loushang.commons.cache.ConfigurationSupport">		<property name="cacheSize">			<value>1000</value>		</property>		<property name="entryLifeTime">			<value>-1</value>		</property>	</bean>	<bean id="dictGroupCacheConfiguration" class="org.loushang.commons.cache.ConfigurationSupport">		<property name="cacheSize">			<value>1000</value>		</property>		<property name="entryLifeTime">			<value>-1</value>		</property>	</bean>	<bean id="cacheBuilder" class="org.loushang.commons.cache.CacheBuilderSupport">	</bean>	<!--huangdos 2005-12-20 Modify and Add monitor and management funtion for 		cache -->	<bean id="cacheManager" class="org.loushang.commons.cache.CacheManagerSupport">		<property name="cacheLifeTime">			<value>-1</value>		</property>		<property name="cacheMonitor">			<ref bean="cacheMonitor" />		</property>	</bean>	<!-- Cache monitor -->	<bean id="cacheMonitor" class="org.loushang.commons.cache.monitor.CacheMonitorSupport"></bean>	<!--huangdos 2005-12-20 Modification ends£¡ -->	<bean id="cacheService" class="org.loushang.waf.ext.service.cache.CacheServiceSupport">		<property name="cacheBuilder">			<ref bean="cacheBuilder" />		</property>		<property name="cacheManager">			<ref bean="cacheManager" />		</property>		<property name="cacheConfiguration">			<map>				<entry key="global">					<ref bean="globalCacheConfiguration" />				</entry>				<entry key="dict.global">					<ref bean="dictGroupCacheConfiguration" />				</entry>			</map>		</property>	</bean>	<bean id="CacheConfiguration" class="org.loushang.commons.cache.ConfigurationSupport">		<property name="cacheSize">			<value>-1</value>		</property>		<property name="entryLifeTime">			<value>5000000</value>		</property>	</bean>	<bean id="DictService" class="org.loushang.waf.ext.service.dict.DictServiceSupport">		<property name="cacheService">			<ref bean="cacheService" />		</property>		<property name="dataSource">			<ref bean="dataSource" />		</property>		<property name="dir">			<value>/WEB-INF/dict</value>		</property>		<property name="includes">			<value>**/*.xml</value>		</property>	</bean>	<!--Caching ends -->	<bean id="enumService" class="org.loushang.waf.ext.service.enum.EnumServiceSupport">		<property name="dir">			<value>/WEB-INF/enum</value>		</property>		<property name="includes">			<value>**/*.properties</value>		</property>	</bean>	<bean id="ResourcesService"		class="org.loushang.waf.ext.service.resources.ResourcesServiceSupport">		<property name="dir">			<value>/WEB-INF/conf</value>		</property>		<property name="includes">			<value>**/table/*.properties,**/tables/*.properties</value>		</property>	</bean>	<!--Add your public service in below section -->	<!-- <bean id="roleManager" class="org.loushang.bsp.permit.management.profile.provider.support.RoleManagerDefaultImpl"> 		<property name="conflictRoleService"><ref bean="conflictRoleService"/></property> 		</bean> <bean id="parmsService" class="org.loushang.bsp.sys.parms.service.support.ParmsServiceImpl"> 		<property name="parmsDomain"><ref bean="parmsDomain"/></property> <property 		name="transactionTemplate"><ref bean="jdbcTransactionTemplate"/></property> 		</bean> --></beans>